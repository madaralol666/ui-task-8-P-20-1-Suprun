<Application x:Class="Task8.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Task8"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#52ABFF"/>
            <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="#282828"/>
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#7AEF78"/>
            <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="#FFFAFA"/>
            <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#151719"/>
            <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="#F8F8FF"/>

            <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#EF2525"/>
            <SolidColorBrush x:Key="SecondaryAccentForegroundBrush" Color="#F8F8FF"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
